{
  "version": 2,
  "buildCommand": "cd admin && npm install && npm run build",
  "outputDirectory": "admin/dist",
  "builds": [
    {
      "src": "backend/src/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/admin/dist/index.html"
    }
  ]
}